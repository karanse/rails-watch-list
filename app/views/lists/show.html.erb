<div class="card-category card-large"
     style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : asset_path('list-background.jpeg') %>)" >
  <h1><%= @list.name %></h1>
</div>

<div class="container py-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"></em></small></span>
    <div>
      <button type="button" class="btn btn-flat">
        <%= link_to "Add Movie", new_list_bookmark_path(@list) %>
      </button>
      <button class= "btn btn-flat">
        <%= link_to "Delete List", @list,
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </button>
    </div>
  </div>
  <div class="row my-2">
    <%= render "bookmark_card" %>
  </div>
</div>
